{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "dom",
      "scripthost"
    ],
    "outDir": "./build/"
  },
  "include": [
    "lib/**/*",
    "src/**/*",
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
